<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Voorbereidingsexamen.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Voorbereidingsexamen"
    xmlns:views="clr-namespace:Voorbereidingsexamen.Views"
    Shell.FlyoutBehavior="Disabled">
    
    <TabBar>
        <Tab Title="Home">
            <ShellContent Title="Home"
                ContentTemplate="{DataTemplate views:MainPage}"
                Route="MainPage" />
        </Tab>
        
        <Tab Title="Boeken">
            <ShellContent Title="Boeken"
                ContentTemplate="{DataTemplate views:BoekenPage}"
                Route="BoekenPage" />
        </Tab>        
        
        <Tab Title="BoekenAuteur">
            <ShellContent Title="BoekenAuteur"
                ContentTemplate="{DataTemplate views:BoekenAuteurPage}"
                Route="BoekenPage" />
        </Tab>
        
        <Tab Title="Werknemers">
            <ShellContent Title="Werknemers"
                ContentTemplate="{DataTemplate views:WerknemersPage}"
                Route="WerknemersPage" />
        </Tab>
    </TabBar>
</Shell>
