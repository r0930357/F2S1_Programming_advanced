<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:VakkenOefening.Models"
             xmlns:viewmodel="clr-namespace:VakkenOefening.ViewModels"
             x:DataType="viewmodel:OverzichtVakkenViewModel"
             x:Class="VakkenOefening.Views.OverzichtVakkenGrid"
             Title="{Binding Title}">

    <ScrollView>
        <Grid ColumnDefinitions="*, *" RowDefinitions="*, *, *, Auto">
            <StackLayout Grid.Row="3" Grid.Column="1" BindableLayout.ItemsSource="{Binding Vakken}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="model:Vak">
                        <StackLayout Grid.Row="{Binding RowNumberGrid}" Grid.Column="{Binding ColumnNumberGrid}">
                            <!-- Tekstvak -->
                            <Label x:Name="lblVak" Text="{Binding Naam}" Style="{StaticResource labelStyle}"/>
                            <!-- Afbeelding -->
                            <ImageButton x:Name="btnImage" Source="{Binding Afbeelding}" AutomationId="{Binding Id}" Clicked="ImageButton_Clicked" Style="{StaticResource imageButtonStyle}"/>
                        </StackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>